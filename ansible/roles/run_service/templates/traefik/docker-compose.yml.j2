version: "3.9"
services:

  traefik:
    image: traefik:v2.9
    ports:
      - target: 80
        published: 80
        protocol: tcp
        mode: host
      - target: 443
        published: 443
        protocol: tcp
        mode: host
      - target: 8080
        published: 8080
        protocol: tcp
        mode: host
      - target: 9090
        published: 9090
        protocol: tcp
        mode: host
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:rw
      - /core/db/certs/letsencrypt:/letsencrypt:rw
      - ./traefik.yml:/etc/traefik/traefik.yml
    deploy:
      mode: global
      restart_policy:
        condition: on-failure
      placement:
        constraints:
          - node.role == manager
      labels:
        - "traefik.http.services.traefik.loadbalancer.server.port=8080" 
        - "traefik.docker.network=hc_net"         
        - "traefik.enable=true"         
    networks:
      - proxy
      - hc_net

networks:
  proxy:
    external: true
  hc_net:
    external: true
